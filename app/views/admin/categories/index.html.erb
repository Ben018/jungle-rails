<section class="categories-show">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Category Name:</th>
      </tr>
    </thead>
    <tbody>
      <tr><%= render @categories %></tr>
    </tbody>
  </table>

</section>

