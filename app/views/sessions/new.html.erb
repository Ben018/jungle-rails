<section class="admin-products-new">

  <header class="page-header">
    <h1>Login</h1>
  </header>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_tag '/login' do %>

        <div class="form-group">
          <%= label_tag :email %>
          <%= text_field_tag :email%>
        </div>

        <div class="form-group">
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </div>

        <%= submit_tag 'Login', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</section>
